<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="autplay.View.jogos.jogodasoma">
    <ContentPage.Content>
        <Grid>
            <Image x:Name="background" Aspect="AspectFill" />
            <StackLayout>

                <Frame HeightRequest="30"
                       WidthRequest="160"
                       Margin="10,10,10,0"
                       BackgroundColor="#fbec5d"
                       BorderColor="DarkGreen"
                       CornerRadius="15"
                       HorizontalOptions="StartAndExpand">
                    <Label x:Name="Score" Margin="05,0,0,0" FontSize="25"
                           Scale="1.2" HorizontalOptions="Start"
                           TextColor="DarkGreen" FontAttributes="bold" 
                           Text="Acertos: "/>
                </Frame>

                <!--<Frame HeightRequest="100"
                   Margin="10,0,10,0"
                   BackgroundColor="Green"
                   BorderColor="DarkGreen"
                   CornerRadius="15">
                    
                    <StackLayout Orientation="Horizontal" HorizontalOptions="Center"
                                 VerticalOptions="Center">

                        <Label x:Name="txt_numero1" FontSize="50" TextColor="white"/>
                        <Label Text="+" FontSize="50" TextColor="white"/>
                        <Label x:Name="txt_numero2" FontSize="50" TextColor="white"/>
                    </StackLayout>
                </Frame>-->

                <!--<Frame Margin="20,0,0,0"
                       WidthRequest="30"
                       HeightRequest="40"
                       HorizontalOptions="Start"
                       >
                    <Label x:Name="Score" Margin="0,0,0,0" FontSize="20"
                           TextColor="black" FontAttributes="bold" 
                           Text="2"/>
                    
                </Frame>-->

                <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand"
                             VerticalOptions="EndAndExpand"
                             HeightRequest="100">
                    <Button Text="2"
                        x:Name="txt_numero1"
                        HorizontalOptions="Start"
                        WidthRequest="120"
                        HeightRequest="100"
                        Margin="0,0,05,0"
                        FontAttributes="Bold"
                        FontSize="60"
                        TextColor="white"
                        CornerRadius="30"
                        BorderColor="White"
                        BorderWidth="2"
                        BackgroundColor="green"
                            
                        />
                    <Button Text="+"
                        HorizontalOptions="Start"
                        WidthRequest="100"
                        HeightRequest="100"
                        Margin="0,0,05,0"
                        FontAttributes="Bold"
                        FontSize="60"
                        TextColor="white"
                        Scale="1"
                        CornerRadius="60"
                        BorderColor="White"
                        BorderWidth="2"
                        BackgroundColor="Aqua"/>
                    <Button Text="5"
                            x:Name="txt_numero2"
                        HorizontalOptions="Start"
                        WidthRequest="120"
                        HeightRequest="80"
                        TextColor="white"
                        Margin="0,0,0,0"
                        FontAttributes="Bold"
                        FontSize="60"
                        CornerRadius="30"
                        BorderColor="White"
                        BorderWidth="2"
                        BackgroundColor="MediumVioletRed"
                        />
                </StackLayout>

                <StackLayout VerticalOptions="EndAndExpand" Margin="5,0,05,20">
                    <!-- FALTA COLOCAR OS BOTÕES NO FINAL DA TELA E AJUSTAR A LOCALIZAÇÃO DOS ELEMENTOS -->
                    <Frame
                         
                         BackgroundColor="Transparent"
                         CornerRadius="10"
                         Scale="1"
                         Margin="20,0,20,0">
                        <StackLayout>
                            <Grid RowDefinitions="*,*"
                              ColumnDefinitions="*,*"
                              >

                                <Button x:Name="btn_1"
                                    FontAttributes="Bold"
                                    VerticalOptions="Center"
                                    BorderColor="white"
                                    BorderWidth="1.5"
                                    CornerRadius="100"
                                    HeightRequest="150"
                                    WidthRequest="150"
                                    Margin="0,0,0,0"
                                    BackgroundColor="YellowGreen"
                                    Text="asd"
                                    TextColor="White"
                                    Clicked="Button_Click"
                                    FontSize="25"
                                    Grid.Row="0"
                                    Grid.Column="0"
                                        
                                    />

                                <Button x:Name="btn_2"
                                    FontAttributes="Bold"
                                    VerticalOptions="Center"
                                    BorderColor="white"
                                    BorderWidth="1.5"
                                    CornerRadius="100"
                                    HeightRequest="150"
                                    WidthRequest="150"
                                    Margin="0,0,0,0"
                                    BackgroundColor="RoyalBlue"
                                    Text="asd"
                                    TextColor="white"
                                    Clicked="Button_Click"
                                    FontSize="25"
                                    Grid.Row="0"
                                    Grid.Column="1" 
                                    />

                                <Button x:Name="btn_3"
                                        FontAttributes="Bold"
                                        VerticalOptions="Center"
                                        BorderColor="white"
                                    BorderWidth="1.5"
                                        CornerRadius="100"
                                        HeightRequest="150"
                                        WidthRequest="150"
                                        Margin="0,0,0,0"
                                        BackgroundColor="DarkCyan"
                                        Text="asd"
                                        TextColor="white"
                                        Clicked="Button_Click"
                                        FontSize="25"
                                        Grid.Row="1"
                                        Grid.Column="0"
                                        />

                                <Button x:Name="btn_4"
                                        FontAttributes="Bold"       
                                        VerticalOptions="Center"
                                        BorderColor="white"
                                        BorderWidth="1.5"
                                        CornerRadius="100"
                                        HeightRequest="150"
                                        WidthRequest="150"
                                        Margin="0,0,0,0"
                                        BackgroundColor="pink"
                                        Text="asd"
                                        TextColor="white"
                                        Clicked="Button_Click"             
                                        FontSize="25"
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        />


                            </Grid>
                        </StackLayout>

                    </Frame>
                </StackLayout>

                <Button
                            x:Name="voltar"
                            FontAttributes="Bold"
                            BorderColor="white"
                            BorderWidth="2"
                            CornerRadius="15"
                            HeightRequest="60"
                            WidthRequest="50"
                            Margin="10,0,10,10"
                            BackgroundColor="#C6734E"
                            Text="Viajar de Volta"
                            TextColor="white"
                            Clicked="voltar_Clicked"
                            FontSize="23"
                            />





            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>