<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="autplay.View.jogos.jogodasoma">
    <ContentPage.Content>
        <Grid>
            <Image x:Name="background" Aspect="AspectFill" />
            <StackLayout>

                <Frame HeightRequest="22"
                       WidthRequest="10"
                       Margin="10,10,10,0"
                       BackgroundColor="YellowGreen"
                       BorderColor="DarkGreen"
                       CornerRadius="15">
                    <Label x:Name="Score" Margin="0,0,0,0" FontSize="20"
                           TextColor="white" FontAttributes="bold"
                           Text="Score: "/>
                    
                </Frame>

                <Frame HeightRequest="100"
                   Margin="10,0,10,0"
                   BackgroundColor="Green"
                   BorderColor="DarkGreen"
                   CornerRadius="15">
                    
                    <StackLayout Orientation="Horizontal" HorizontalOptions="Center"
                                 VerticalOptions="Center">

                        <Label x:Name="txt_numero1" FontSize="50" TextColor="white"/>
                        <Label Text="+" FontSize="50" TextColor="white"/>
                        <Label x:Name="txt_numero2" FontSize="50" TextColor="white"/>
                    </StackLayout>
                </Frame>

                <StackLayout>
                    <!-- FALTA COLOCAR OS BOTÕES NO FINAL DA TELA E AJUSTAR A LOCALIZAÇÃO DOS ELEMENTOS -->
                    <Frame
                         VerticalOptions="End"
                         BackgroundColor="Transparent"
                         CornerRadius="10"
                         Margin="20">
                        <StackLayout>
                            <Grid RowDefinitions="*,*"
                              ColumnDefinitions="*,*"
                              >

                                <Button x:Name="btn_1"
                                    FontAttributes="Bold"
                                    VerticalOptions="Center"
                                    BorderColor="Black"
                                    BorderWidth="1"
                                    CornerRadius="100"
                                    HeightRequest="150"
                                    WidthRequest="150"
                                    Margin="0,0,0,0"
                                    BackgroundColor="YellowGreen"
                                    Text="asd"
                                    TextColor="White"
                                    Clicked="Button_Click"
                                    FontSize="25"
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    />

                                <Button x:Name="btn_2"
                                    FontAttributes="Bold"
                                    VerticalOptions="Center"
                                    BorderColor="Black"
                                    BorderWidth="1"
                                    CornerRadius="100"
                                    HeightRequest="150"
                                    WidthRequest="150"
                                    Margin="0,0,0,0"
                                    BackgroundColor="RoyalBlue"
                                    Text="asd"
                                    TextColor="white"
                                    Clicked="Button_Click"
                                    FontSize="25"
                                    Grid.Row="0"
                                    Grid.Column="1" 
                                    />

                                <Button x:Name="btn_3"
                                        FontAttributes="Bold"
                                        VerticalOptions="Center"
                                        BorderColor="Black"
                                        BorderWidth="1"
                                        CornerRadius="100"
                                        HeightRequest="150"
                                        WidthRequest="150"
                                        Margin="0,0,0,0"
                                        BackgroundColor="DarkCyan"
                                        Text="asd"
                                        TextColor="white"
                                        Clicked="Button_Click"
                                        FontSize="25"
                                        Grid.Row="1"
                                        Grid.Column="0"
                                        />

                                <Button x:Name="btn_4"
                                        FontAttributes="Bold"       
                                        VerticalOptions="Center"
                                        BorderColor="Black"
                                        BorderWidth="1"
                                        CornerRadius="100"
                                        HeightRequest="150"
                                        WidthRequest="150"
                                        Margin="0,0,0,0"
                                        BackgroundColor="pink"
                                        Text="asd"
                                        TextColor="white"
                                        Clicked="Button_Click"             
                                        FontSize="25"
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        />


                            </Grid>
                        </StackLayout>

                    </Frame>
                </StackLayout>







            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>