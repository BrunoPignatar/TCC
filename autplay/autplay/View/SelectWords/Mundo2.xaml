<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
             x:Class="autplay.selectword.Mundo2"
             Title="MUNDO 2">
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,0.8">
            <GradientStop Color="#698F38"
                          Offset="0.28" />
            <GradientStop Color="#C6734E"
                          Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>
    <ContentPage.Content>
        <StackLayout>
            <Frame HeightRequest="50"
                   BackgroundColor="#698F38"
                   BorderColor="Transparent">

                <StackLayout Orientation="Horizontal">

                    <ImageButton x:Name="AvatarImage"
                           BackgroundColor="#698F38"
                           BorderColor="#C6734E"
                           BorderWidth="1.5"
                           Scale="1.5"
                           HeightRequest="50"
                           WidthRequest="45"
                           Padding="4.5"
                           Margin="3"
                           
                           CornerRadius="50"
                           Aspect="AspectFill"/>

                    <Label x:Name="lblBoasVindas"
                           TextColor="Brown" FontSize="20" 
                           Margin="15,0,5,0"
                           HorizontalTextAlignment="Start" 
                           
                           FontAttributes="Bold"
                           VerticalTextAlignment="Center"/>

                    <ImageButton x:Name="AlterAvatar"
                           BackgroundColor="#C6734E"
                           HorizontalOptions="EndAndExpand"
                           VerticalOptions="Center"
                           Padding="-3"
                           Scale="1"
                           Margin="0,2,0,0"
                           CornerRadius="50"
                           Clicked="AlterAvatar_Clicked"/>
                </StackLayout>
            </Frame>
            <BoxView Color="#C6734E" HeightRequest="1.5"
                     HorizontalOptions="FillAndExpand"/>

            <StackLayout VerticalOptions="CenterAndExpand">

                <Button
                        x:Name="jogo1_mundo2"
                         FontAttributes="Bold"
                         VerticalOptions="Center"
                         BorderWidth="1"
                         CornerRadius="15"
                         HeightRequest="60"
                         WidthRequest="50"
                         Margin="10"
                         BackgroundColor="#FAF9F6"
                         Text="JOGO DA SOMA"
                         TextColor="#698F38"
                        Clicked="jogo1_mundo2_Clicked"
                        FontSize="23"
                    />


                <Button
                        x:Name="jogo2_mundo2"
                         FontAttributes="Bold"
                         VerticalOptions="Center"
                         BorderWidth="1"
                         CornerRadius="15"
                         HeightRequest="60"
                         WidthRequest="50"
                         Margin="10"
                         BackgroundColor="#FAF9F6"
                         Text="JOGO DA SUBTRAÇÃO"
                         TextColor="#698F38"
                         Clicked="jogo2_mundo2_Clicked"
                         FontSize="23"
                         />

            </StackLayout>

            <StackLayout VerticalOptions="End">
                <Button
                            x:Name="voltar"
                            FontAttributes="Bold"
                            BorderColor="Transparent"
                            BorderWidth="1"
                            CornerRadius="15"
                            HeightRequest="60"
                            WidthRequest="50"
                            Margin="10,0,10,10"
                            BackgroundColor="white"
                            Text="RETORNAR"
                            TextColor="#C6734E"
                            Clicked="voltar_Clicked"
                            FontSize="23"
                            />

            </StackLayout>


        </StackLayout>
    </ContentPage.Content>
</ContentPage>