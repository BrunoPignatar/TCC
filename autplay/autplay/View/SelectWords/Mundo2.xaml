<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
             x:Class="autplay.selectword.Mundo2"
             Title="MUNDO 2">
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#698F38"
                          Offset="0.28" />
            <GradientStop Color="#C6734E"
                          Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>
    <ContentPage.Content>
        <StackLayout>
            <Frame HeightRequest="50"
                   BackgroundColor="#698F38"
                   BorderColor="Transparent">

                <StackLayout Orientation="Horizontal">

                    <ImageButton x:Name="AvatarImage"
                           BackgroundColor="#698F38"
                           Scale="1.4"
                           Padding="4" Margin="2"
                           CornerRadius="50"/>

                    <Label x:Name="lblBoasVindas"
                           TextColor="#FAF9F6" FontSize="20" 
                           Margin="15,0,0,0"
                           HorizontalTextAlignment="Start"
                           FontAttributes="Bold"
                           VerticalTextAlignment="Center"/>

                    <ImageButton x:Name="AlterAvatar"
                           BackgroundColor="#698F38"
                           HorizontalOptions="EndAndExpand"
                           VerticalOptions="Center"
                           Padding="-3"
                           Scale="1"
                           Margin="0,2,0,0"
                           CornerRadius="50"
                           Clicked="AlterAvatar_Clicked" />
                </StackLayout>
            </Frame>
            


            

                <StackLayout VerticalOptions="CenterAndExpand">

                    <Button
                        x:Name="jogo1_mundo2"
                         FontAttributes="Bold"
                         VerticalOptions="Center"
                         BorderWidth="1"
                         CornerRadius="15"
                         HeightRequest="60"
                         WidthRequest="50"
                         Margin="10"
                         BackgroundColor="#FAF9F6"
                         Text="JOGO DA SOMA"
                         TextColor="#698F38"
                        Clicked="jogo1_mundo2_Clicked"
                        FontSize="23"
                    xct:TouchEffect.AnimationDuration="250" xct:TouchEffect.AnimationEasing="{x:Static Easing.CubicInOut}"
                    xct:TouchEffect.PressedScale="0.75" xct:TouchEffect.PressedOpacity="0.6" xct:TouchEffect.PressedBackgroundColor="#C6734E"/>
                    

                    <Button
                        x:Name="jogo2_mundo2"
                         FontAttributes="Bold"
                         VerticalOptions="Center"
                         BorderWidth="1"
                         CornerRadius="15"
                         HeightRequest="60"
                         WidthRequest="50"
                         Margin="10"
                         BackgroundColor="#FAF9F6"
                         Text="JOGO DA SUBTRAÇÃO"
                         TextColor="#698F38"
                         Clicked="jogo2_mundo2_Clicked"
                         FontSize="18"
                         xct:TouchEffect.AnimationDuration="250" xct:TouchEffect.AnimationEasing="{x:Static Easing.CubicInOut}"
                         xct:TouchEffect.PressedScale="0.75" xct:TouchEffect.PressedOpacity="0.6" xct:TouchEffect.PressedBackgroundColor="#C6734E"/>

                    <Button
                        x:Name="jogo3_mundo2"
                         FontAttributes="Bold"
                         VerticalOptions="Center"
                         BorderWidth="1"
                         CornerRadius="15"
                         HeightRequest="60"
                         WidthRequest="50"
                         Margin="10"
                         BackgroundColor="#FAF9F6"
                         Text="JOGO 3"
                         TextColor="#698F38"
                         Clicked="jogo3_mundo2_Clicked"
                         FontSize="18"
                         xct:TouchEffect.AnimationDuration="250" xct:TouchEffect.AnimationEasing="{x:Static Easing.CubicInOut}"
                         xct:TouchEffect.PressedScale="0.75" xct:TouchEffect.PressedOpacity="0.6" xct:TouchEffect.PressedBackgroundColor="#C6734E"/>

                </StackLayout>

            <StackLayout VerticalOptions="End">
                <Button
                            x:Name="voltar"
                            FontAttributes="Bold"
                            
                            BorderColor="Transparent"
                            BorderWidth="1"
                            CornerRadius="15"
                            HeightRequest="60"
                            WidthRequest="50"
                            Margin="10,0,10,10"
                            BackgroundColor="white"
                            Text="RETORNAR"
                            TextColor="#698F38"
                            Clicked="voltar_Clicked"
                            FontSize="23"
                            xct:TouchEffect.AnimationDuration="250" xct:TouchEffect.AnimationEasing="{x:Static Easing.CubicInOut}"
                            xct:TouchEffect.PressedScale="0.75" xct:TouchEffect.PressedOpacity="0.6" xct:TouchEffect.PressedBackgroundColor="#C6734E"/>

            </StackLayout>


        </StackLayout>
    </ContentPage.Content>
</ContentPage>